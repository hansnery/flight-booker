


<div class="row">
  <div class="col-sm-6">
    <h1>Passengers</h1>
  </div>

  <div class="col-sm-6 text-end">
  <%= link_to new_passenger_path, class: 'btn btn-primary' do %>
    Add New Passenger
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    

            <th>Booking</th>
            
          <th></th>
        
      </tr>
    </thead>

    <tbody>
      <% @passengers.each do |passenger| %>
        <%= content_tag :tr, id: dom_id(passenger), class: dom_class(passenger) do %>
          

                      <td><%= passenger.booking_id %></td>
          
          
            <td><%= link_to 'Show', passenger %></td>
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
