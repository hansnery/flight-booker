<%= @booking_params %>
<%= @booking.flight_id %>
<%= simple_form_for :passenger, url: root_path, method: "GET" do |f| %>

  <div class="col-md-2 py-2">
    <div class="py-3">
      <%= f.input :name %>
    </div>
  </div>

  <div class="col-md-2 py-2">
    <div class="py-3">
      <%= f.input :email %>
    </div>
  </div>

  <div class="col-md-2 py-2">
    <div class="py-3">
      <%= f.button :submit, class: 'col btn btn-primary' %>
    </div>
  </div>
<% end %>